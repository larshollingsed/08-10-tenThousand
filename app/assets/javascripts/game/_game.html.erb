<form ng-submit="scoreDice()">
  <div ng-repeat="die in dice">
    <!-- <label for="poop"> -->
    <input type="checkbox" ng-model="die.held" ng-click="scoreDice()" id="die{{die.id}}"> </input><label for="die{{die.id}}"><%= image_tag('/assets/{{getImage(die.face)}}', size: "50") %>
</label>
  </div>
  <p>
    Score for these dice - {{score}}<br>
    {{submitted}}
  </p>
</form>
<button ng-show="score" ng-click="scoreAndRoll()">Save these dice and roll again</button><br>
<button ng-show="score" ng-click="endTurn()">Save these dice and end turn</button>

<form ng-submit="rollDice()">
  <input type="number" ng-model="number"></input>
  <button type="submit">Roll this many dice</button>
</form>
<p>
  Current Round Score = {{round}}
</p>
<div ng-controller="PlayerCtrl">
<p ng-repeat="player in players">
  {{player.name}} - {{player.total}}
</p>
</div>
<h5>
  Scoring - 
</h5>
<ul>
  <li>
    6 dice straight => 1500
  </li>
  <li>
    3 pairs => 750
  </li>
  <li>
    3 of a kind => face * 100<br>
    ~~~ 3 ones => 1000
  </li>
  <li>
    4/5/6 of a kind => twice the value of the previous multiple<br>
    EXAMPLE - three 4's => 400; four 4's => 800; five 4's => 1600
  </li>
</ul>